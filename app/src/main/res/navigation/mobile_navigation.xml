<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_home">

  <fragment
    android:id="@+id/navigation_home"
    android:label="@string/title_home"
    android:name="edu.cnm.deepdive.quotes.ui.home.HomeFragment"
    tools:layout="@layout/fragment_home">

    <action
      android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
      app:destination="@id/navigation_home_second"/>
  </fragment>
  <fragment
    android:id="@+id/navigation_home_second"
    android:label="@string/home_second"
    android:name="edu.cnm.deepdive.quotes.ui.home.HomeSecondFragment"
    tools:layout="@layout/fragment_home_second">
    <action
      android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
      app:destination="@id/navigation_home"/>

    <argument
      android:name="myArg"
      app:argType="string"/>
  </fragment>

  <fragment
    android:id="@+id/navigation_dashboard"
    android:label="@string/title_dashboard"
    android:name="edu.cnm.deepdive.quotes.ui.dashboard.DashboardFragment"
    tools:layout="@layout/fragment_dashboard"/>

  <fragment
    android:id="@+id/navigation_notifications"
    android:label="@string/title_notifications"
    android:name="edu.cnm.deepdive.quotes.ui.notifications.NotificationsFragment"
    tools:layout="@layout/fragment_notifications"/>
</navigation>